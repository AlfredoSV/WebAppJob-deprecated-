@model UserViewModel
@{
    ViewData["Title"] = "SeeMyInformation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My information</h1>
<hr />
<form class="container" enctype="multipart/form-data">
    <div class="row mt-3">
        <div class="col-4">
            <div class="form-group">
                <label class="control-label">Id</label>
                <input type="text" asp-for="Id" readonly class="form-control" />
            </div>
        </div>

        <div class="col-4">
            <div class="form-group">
                <label class="control-label">User Name</label>
                <input type="text" asp-for="UserName" readonly class="form-control" />
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label class="control-label">Date Created</label>
                <input type="date" asp-for="DateCreated" readonly class="form-control" />
            </div>
        </div>

    </div>

    <div class="row mt-3">
        <div class="col-5">
            <div class="form-group">
                <label class="control-label">Name</label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
        </div>

        <div class="col-2">
            <div class="form-group">
                <label class="control-label">Last Name</label>
                <input type="text" asp-for="LastName" class="form-control" />
            </div>
        </div>

        <div class="col-5">
            <div class="form-group">
                <label class="control-label">Age</label>
                <input type="number" asp-for="Age" class="form-control" />
            </div>
        </div>

    </div>

    <div class="row mt-3">
        <div class="col-5">
            <div class="form-group">
                <label class="control-label">Email</label>
                <input type="email" asp-for="Email" class="form-control" />
                
            </div>
        </div>

        <div class="col-7">
            <div class="form-group">
                <label class="control-label">Address</label>
                <input asp-for="CvFile" type="file" class="form-control"></input>
            </div>
        </div>

    </div>

    <div class="row mt-3">
        <div class="col">
            <div class="form-group">
                <label class="control-label">Curriculum Vitae</label>
                <textarea cols="10" rows="6" asp-for="Address" class="form-control"></textarea>
            </div>
        </div>

    </div>

    <div class="row mt-3">
        <div class="col d-flex justify-content-center">
            <button class="btn btn-success mt-4 w-40"
                    type="submit">
                Edit
            </button>
        </div>

    </div>


</form>



